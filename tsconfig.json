{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": false,
    "esModuleInterop": true,
    "rootDir": "./bot-src",
    "outDir": "./headless",
    "lib": ["es2017"]
  },
  "include": [
    "bot-src"
  ],
  "exclude": [
    "plugin-src",
    "plugins",
    "bot",
    "realmlib",
    "node_modules"
  ]
}
